        />
        <rect
          x="57.2344"
          y="68.5776"
          width="16.0426"
          height="136.362"
          rx="5"
          transform="rotate(-45 57.2344 68.5776)"
          fill="#DF3429"
        />
        <rect
          x="67.6465"
          y="164.071"
          width="16.0426"
          height="136.362"
          rx="5"
          transform="rotate(-135 67.6465 164.071)"
          fill="#DF3429"
        />
      </svg>
      <h5 class="custom-lead" style="font-weight: 600;">Transaction Failed</h5>
      <!-- </div> -->
      <!-- <div class="modal-body"> -->
      <p
        class="text-center mt-3 text-muted"
        style="font-weight: 500; font-size: 1rem;"
      ></p>
      <!-- </div> -->

      <button
        type="button"
        class="btn hire-btn btn-lg text-white mt-3"
        style="font-weight: 500; font-size: 0.75rem;"
        data-dismiss="modal"
      >
        Retry
      </button>
    </div>
  </div>
</div>
<!-- End of Payment Failed Modal -->

