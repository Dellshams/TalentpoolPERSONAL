/* Modals */
<!-- Buttons trigger modals -->
<button
  type="button"
  class="btn btn-lg button"
  data-toggle="modal"
  data-target="#paymentSuccessModal"
>
  Success
</button>

<button
  type="button"
  class="btn btn-lg button"
  data-toggle="modal"
  data-target="#paymentFailedModal"
>
  Failed
</button>

<!-- Modal -->
<!-- Start of Payment Success Modal -->
<div
  class="modal fade"
  id="paymentSuccessModal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalCenterTitle"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div
      class="modal-content payment-modal mx-auto d-flex flex-column justify-content-center align-items-center p-4"
    >
      <!-- <div class="modal-header"> -->
      <svg
        width="150px"
        height="150px"
        viewBox="0 0 16 16"
        fill="green"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          fill-rule="evenodd"
          d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"
        />
        <path
          fill-rule="evenodd"
          d="M10.97 4.97a.75.75 0 0 1 1.071 1.05l-3.992 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.236.236 0 0 1 .02-.022z"
        />
      </svg>
      <h5 class="custom-lead" style="font-weight: 600;">Payment Successful</h5>
      <!-- </div> -->
      <!-- <div class="modal-body"> -->
      <p
        class="text-center mt-3 text-muted"
        style="font-weight: 500; font-size: 1rem;"
      >
        Transaction ID: <br />
        <span id="transactionID" class="mt-2">123456</span>
      </p>
      <!-- </div> -->

      <button
        type="button"
        class="btn hire-btn btn-lg text-white mt-3"
        style="font-weight: 500; font-size: 0.75rem;"
        data-dismiss="modal"
      >
        Back To Dashboard
      </button>
    </div>
  </div>
</div>
<!-- End of Payment Success Modal -->

