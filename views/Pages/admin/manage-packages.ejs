<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../../Templates/head') %>
  <link href="../styles/bootstrap-css/bootstrap.css" rel="stylesheet" />
  <link href="../styles/custom-css/employer-top-nav.css" rel="stylesheet" />
  <link href="../styles/custom-css/side-nav.css" rel="stylesheet" />
  <link href="../styles/custom-css/admin-dash.css" rel="stylesheet" />
</head>

<body>

  <%- include('../../Templates/admin-header') %>

  <%- include('../../Templates/admin-sidebar') %>


  <section class="admin__dashboard p-4">
    <h2 class="dashboard__heading text-center">Manage Packages</h2>

    <div class="container-fluid">
      <!-- Unable to include this package -->
      <%- // include('../includes/packages') %>
      <!-- Nav tabs -->
      <ul class="nav nav-tabs mb-4" id="myTab" role="tablist">
        <li class="nav-item m-2">
          <a class="nav-link active" id="view-packages-tab" data-toggle="tab" href="#viewPackages" role="tab"
            aria-controls="home" aria-selected="true">View Packages</a>
        </li>
        <li class="nav-item m-2">
          <a class="nav-link" id="create-package-tab" data-toggle="tab" href="#createPackage" role="tab"
            aria-controls="profile" aria-selected="false">Create Package</a>
        </li>
        <li class="nav-item m-2">
          <a class="nav-link" id="update-package-tab" data-toggle="tab" href="#updatePackage" role="tab"
            aria-controls="messages" aria-selected="false">Update Package</a>
        </li>
        <li class="nav-item m-2">
          <a class="nav-link text-danger" id="delete-package-tab" data-toggle="tab" href="#deletePackage" role="tab"
            aria-controls="settings" aria-selected="false">Delete Package</a>
        </li>
      </ul>
      <!-- Tab panes -->
      <div class="tab-content">
        <div class="tab-pane fade show active" id="viewPackages" role="tabpanel" aria-labelledby="view-packages-tab">
          <h6 class="text-center">View Packages</h6>
        </div>
        <div class="tab-pane fade" id="createPackage" role="tabpanel" aria-labelledby="create-package-tab">
          <h6 class="text-center">Create Package</h6>
          <form action="" method="post" class="p-3 m-3 mx-auto mw-75">
            <div class="form-group mb-3 mx-auto">
              <label for="package_name">Package Name</label>
              <input class="form-control-lg" type="text" name="package_name" id="package_name"
                placeholder="Write a Package Name.">
            </div>
            <div class="form-group mb-3 mx-auto">
              <label for="price">Monthly Price</label>
              <input class="form-control-lg" type="number" id="price" name="price" placeholder="Enter Price">
            </div>
            <div class="form-group mb-3 mx-auto">
              <label for="description">Package Description</label>
              <textarea class="form-control-lg" name="description" id="description"
                placeholder="Write a Package Description."></textarea>
            </div>
            <button type="submit" class="btn btn-block btn-primary mt-3">Create Package</button>
          </form>
        </div>
        <div class="tab-pane fade" id="updatePackage" role="tabpanel" aria-labelledby="update-package-tab">
          <h6 class="text-center">Update Package</h6>
          <form action="" method="post" class="p-3 m-3 mx-auto mw-75">
            <div class="form-group mb-3 mx-auto">
              <label for="package_id">Package ID</label>
              <input class="form-control-lg" type="number" id="package_id" name="package_id"
                placeholder="Enter Package ID">
            </div>
            <div class="form-group mb-3 mx-auto">
              <label for="package_name">Package Name</label>
              <input class="form-control-lg" type="text" name="package_name" id="package_name"
                placeholder="Write a Package Name.">
            </div>
            <div class="form-group mb-3 mx-auto">
              <label for="price">Monthly Price</label>
              <input class="form-control-lg" type="number" id="price" name="price" placeholder="Enter Price">
            </div>
            <div class="form-group mb-3 mx-auto">
              <label for="description">Package Description</label>
              <textarea class="form-control-lg" name="description" id="description"
                placeholder="Write a Package Description."></textarea>
            </div>
            <button type="submit" class="btn btn-block btn-primary mt-3">Update Package</button>
          </form>
        </div>
        <div class="tab-pane fade" id="deletePackage" role="tabpanel" aria-labelledby="delete-package-tab">
          <h6 class="text-center">Delete Package</h6>
          <form action="" method="post" class="p-3 m-3 mx-auto mw-75">
            <div class="form-group mb-3 mx-auto">
              <label for="package_id">Package ID</label>
              <input class="form-control-lg" type="number" id="package_id" name="package_id"
                placeholder="Enter Package ID">
            </div>
            <button type="submit" class="btn btn-block btn-danger mt-3">Delete Package</button>
          </form>
        </div>
      </div>
    </div>
  </section>
  <div id="body__click"></div>
  <style>
    form {
      max-width: 100%;
      width: max-content;
    }

    form .form-group,
    .form-control-lg {
      width: 100% !important;
    }

    textarea {
      height: 10rem !important;
    }
  </style>
  <script src="../js/bootstrap-js/popper.js"></script>
  <script src="../js/bootstrap-js/jquery.js"></script>
  <script src="../js/bootstrap-js/bootstrap.js"></script>
  <script>
    $('#myModal').on('shown.bs.modal', function () {
      $('#myInput').trigger('focus')
    })
  </script>
  <script src="../js/custom-js/side-nav.js"></script>
</body>

</html>