<div
  class="modal fade"
  id="update-password"
  tabindex="-1"
  role="dialog"
  aria-labelledby="update-password"
  aria-hidden="true"
>
  <form id="changePassword" enctype="multipart/form-data" novalidate>
    <input type="hidden" name="_csrf" value="" />
    <div class="modal-dialog modal-dialog-centered modal-lg">
      <div class="modal-content">
        <div class="container">
          <div class="modal-header">
            <h5 class="modal-title title-text">Update Password</h5>
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span class="close-btn1" aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body myModal-body">
            <div class="row justify-content-center">
              <div class="col-12">
                <div
                  class="alert alert-danger text-center"
                  id="error-message"
                  style="display: none;"
                ></div>
              </div>
              <div class="col-12 col-md-8">
                <div class="form-group">
                  <label>Old Password</label>
                  <div class="input-group" id="show_hide_password">
                    <input
                      class="form-control"
                      type="password"
                      name="oldPassword"
                      required
                    />
                    <div class="input-group-append">
                      <a href="" class="input-group-text"
                        ><i class="fa fa-eye-slash" aria-hidden="true"></i
                      ></a>
                    </div>
                    <div class="invalid-feedback">
                      Enter old password
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="row justify-content-center">
              <div class="col-12 col-md-8">
                <div class="form-group">
                  <label>New Password</label>
                  <div class="input-group" id="new_password">
                    <input
                      class="form-control"
                      type="password"
                      name="newPassword"
                      required
                    />
                    <div class="input-group-append">
                      <a href="" class="input-group-text"
                        ><i class="fa fa-eye-slash" aria-hidden="true"></i
                      ></a>
                    </div>
                    <div class="invalid-feedback">
                      Enter new password
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="row justify-content-center">
              <div class="col-12 col-md-8">
                <div class="form-group">
                  <label>Confirm New Password</label>
                  <div class="input-group" id="confirm_new_password">
                    <input
                      class="form-control"
                      type="password"
                      name="confirmPassword"
                      required
                    />
                    <div class="input-group-append">
                      <a href="" class="input-group-text"
                        ><i class="fa fa-eye-slash" aria-hidden="true"></i
                      ></a>
                    </div>
                    <div class="invalid-feedback">
                      Confirm new password
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="modal-footer d-flex justify-content-center">
            <button
              type="submit"
              class="btn mx-auto"
              style="background: #084482; color: #ffffff;"
            >
              Save Password
            </button>
          </div>
        </div>
      </div>
    </div>
  </form>
</div>
