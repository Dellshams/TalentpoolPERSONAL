<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../Templates/head') %>

    <link rel="stylesheet" href="../styles/custom-css/employer-sign-in.css" />
    <style>
      form .invalid {
        border: 2px solid palevioletred !important;
      }
    </style>
  </head>

  <body>
    <%- include('../Templates/header') %>

    <main class="container-fluid content-container">
      <div class="row">
        <div class="col-lg-5 d-none d-lg-block signIn-img-div">
          <!-- <img src="img/employee_signup_image.png" alt="employee sign up image"> -->
        </div>

        <div class="col-lg-7 px-4">
          <div class="container pl-lg-5 pr-lg-3 pt-4" id="parent">
            <div class="pt-5 pb-2">
              <p class="bigTitle">Welcome Back</p>
              <p class="smallTitle">Get the right talent for that job now.</p>
            </div>
            <% if (errorMessage) { %>
            <div
              role="alert"
              class="alert alert-danger user-message user-message--error"
            >
              <%= errorMessage %>
            </div>
            <% }if (success && success.length > 0) { %>
            <div role="alert" class="alert alert-success user-message">
              <%= success %>
            </div>
            <% } %>
            <form
              class="needs-validation"
              method="POST"
              action="/employer/login"
              novalidate
              id="form"
            >
              <div class="col-md mb-3 px-0 email-phone">
                <label for="email">Email</label>
                <input
                  class="form-control <%= validationErrors.find(e => e.param === 'email') ? 'invalid' : '' %>"
                  type="email"
                  name="email"
                  id="email"
                  placeholder="abc@gmail.com"
                  value="<%= oldInput.email %>"
                />
              </div>

              <div class="col-md mb-3 px-0 password-area">
                <label for="password">Password</label>
                <input
                  class="form-control <%= validationErrors.find(e => e.param === 'password') ? 'invalid' : '' %>"
                  type="password"
                  name="password"
                  id="password"
                  minlength="8"
                  placeholder="at least 8 characters"
                  value="<%= oldInput.password %>"
                />
              </div>
              <input type="hidden" name="_csrf" value="<%= csrfToken %>" />

              <div class="row px-3 checkboxes">
                <div class="col my-1 px-0">
                  <div class="custom-control custom-checkbox mr-sm-2">
                    <input
                      type="checkbox"
                      class="custom-control-input"
                      id="remember-me"
                    />
                    <label
                      class="custom-control-label terms-policy"
                      for="remember-me"
                      >Remember me</label
                    >
                  </div>
                </div>
                <div class="col text-right px-0">
                  <p>
                    <a href="/recover/password" class="login-link"
                      >Forgot Password?</a
                    >
                  </p>
                </div>
              </div>

              <!-- <div class="row">
                            <div class="col d-flex align-items-center justify-content-center" id="button-div">
                                <button class="btn btn-primary btn-block btn-color py-3 mt-3 mb-4" id="signup-btn"
                                    type="submit">Sign In</button>
                            </div>
                        </div> -->
              <div class="row form-button">
                <div class="col">
                  <button
                    class="btn btn-primary btn-block btn-color py-3 mt-3 mb-4 text-white"
                    id="signup-btn"
                    type="submit"
                    data-toggle=""
                    data-target="#exampleModal"
                  >
                    Sign In
                  </button>
                </div>
              </div>
            </form>

            <div class="row social-buttons">
              <div class="col-md-5 d-none d-md-block">
                <hr />
              </div>
              <div class="col-md-2">
                <p class="text-center">OR</p>
              </div>
              <div class="col-md-5 d-none d-md-block">
                <hr />
              </div>
            </div>

            <div class="row mt-2 justify-content-center social-buttons">
              <div class="col-md">
                <a class="social-sign-in" href="/auth/employer/github">
                  <button type="button" class="btn  btn-block  github-btn py-3 my-1"><i class="fab fa-github pr-2" aria-hidden="true"></i>sign up with Github</button>
              </a>
              </div>

              <div class="col-md">
                <a class="social-sign-in" href="/auth/employer/google">
                  <button type="button" class="btn btn-block  google-btn py-3 my-1 text-white"><i class="fab fa-google pr-2 text-white" aria-hidden="true"></i>Sign up with Google</button>
              </a>
              </div>
            </div>

            <p class="text-center py-2">
              Don't have an account with us?
              <a href="/employer/signup" class="login-link">Sign Up.</a>
            </p>
          </div>
        </div>
      </div>
    </main>

    <%- include('../Templates/footer') %>

    <!-- <script src="../js/bootstrap-js/popper.js"></script>
    <script src="../js/bootstrap-js/jquery.js"></script>
    <script src="../js/bootstrap-js/bootstrap.js"></script> -->
    <!-- <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="js/custom-js/employerlogin.js" type="module"></script> -->
    <script>
      const submitButton = document.getElementById('signup-btn');
      submitButton.addEventListener('click', (e) => {
          submitButton.innerHTML = '<span class="spinner-border spinner-border" role="status" aria-hidden="true"></span><span class="sr-only">Loading...</span>';
      });
  </script>
  </body>
</html>
