<!DOCTYPE html>

<html lang="en">

<head>
  <%- include('../includes/employeeHead') %>
</head>

<body>
  <style>
    .toast-body,
    .close {
      display: none;
    }
  </style>


  <%- include('../includes/employeeHeader') %>

  <div class="container-fluid mt-4">

    <div class="row">

      <div class="col-lg-3 col-xl-2 d-md-block sticky-top">
        <%- include('../includes/employeeSideNav') %>
      </div>

      <div class="col-lg-9 ml-sm-auto col-xl-10 pl-lg-0 pr-lg-5 px-xl-5">

        <header class="mx-3 mt-3">
          <h1 class="display-5 text-left">
            Welcome <%= data.employee.username %>
          </h1>
        </header>
        <div class="user row mx-1 mt-5">
          <div class="user__profile col-12 col-md-6">
            <div class="d-flex flex-column align-items-center">
              <img src=<%= data.employee.image %> alt="employee profile image"
                class="img-fluid employee-img">
              <h5 class="text-center">
                <%= data.employee.first_name.charAt(0).toUpperCase()+data.employee.first_name.slice(1).toLowerCase()  %>
                <%= data.employee.last_name.charAt(0).toUpperCase()+data.employee.last_name.slice(1).toLowerCase()  %>
              </h5>
              <h6><%= data.employee.track %> </h6>
            </div>
          </div>
          <div class="col-12 col-md-6">
            <section>
              <header>
                <h3>Skills</h3>
              </header>
              <ul class="list-unstyled">
                <% if (data.employee.skills) { %>
                <% data.employee.skills.forEach(function(skill){ %>
                <li><%= skill %></li>
                <% }); %>
                <% } else { %>
                <li>No skill added yet. Please add one in portfolio</li>
                <% } %>
              </ul>
            </section>
            <section>
              <header>
                <h3>Portfolio</h3>
              </header>
              <ul class="list-unstyled">
                <% if (data.employee.portfolios) { %>
                <% data.employee.portfolios.forEach(function(item){ %>
                <li><%= item %></li>
                <% }); %>
                <% } else { %>
                <li>No item in portfolio ye. Please add one in portfolio </li>
                <% } %>
              </ul>
            </section>
          </div>
        </div>
        <code>
          <%- JSON.stringify(data) %>
        </code>
      </div>
    </div>

    <!-- Optional JavaScript -->
    <script src="/js/custom-js/side-nav.js"></script>
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="/js/bootstrap-js/popper.js"></script>
    <script src="/js/bootstrap-js/jquery.js"></script>
    <script src="/js/bootstrap-js/bootstrap.js"></script>
</body>

</html>