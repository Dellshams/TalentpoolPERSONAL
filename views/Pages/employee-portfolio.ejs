<!DOCTYPE html>

<html lang="en">

<head>
  <%- include('../includes/employeeHead') %>

  <style>
    .mr-2 img {
      vertical-align: middle;
      border-style: none;
      max-width: 60px;
      max-height: 60px;
    }
  </style>
</head>

<body>

  <%- include('../includes/employeeHeader') %>
  <%- include('../includes/employeeSideNav') %>
  <main>
    <div class="container-fluid mt-4">


      <section class="portfolio mb-4">
        <% if (errorMessage) { %>
        <div role="alert" class="alert alert-danger user-message user-message--error"><%= errorMessage %></div>
        <% }if (success && success.length > 0) { %>
        <div role="alert" class="alert alert-success user-message"><%= success %></div>
        <% } %>
        <div class="px-3">
          <div class="section-title d-flex align-items-center justify-content-between py-2">
            <div class="section-name">
              <h3>Your Portfolios</h3>
            </div>
            <div class="section-icon">
              <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#portfolioPopup">
                <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M9 7V0H7V7H0V9H7V16H9V9H16V7H9Z" fill="#084482" />
                </svg>
                Add Portfolio
              </button>

              <div class="modal fade" id="portfolioPopup">
                <div class="modal-dialog">
                  <div class="modal-content ml-lg-5 my-lg-5">
                    <div class="modal-header">
                      <h4 class="modal-title">
                        Portfolio details
                      </h4>
                      <button type="button" class="close" data-dismiss="modal">
                        &times;
                      </button>
                    </div>
                    <div class="modal-body">
                      <form action="/employee/create/portfolio" method="POST">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                        <div class="form-group">
                          <label for="title">Title</label>
                          <input type="text" class="form-control px-4 mt-2 mb-4 shadow p-3 bg-white rounded"
                            placeholder="Portfolio title" name="title" required="required" id="portfolio-title" />
                        </div>
                        <div class="form-group">
                          <label for="description">Description</label>
                          <input type="text" class="form-control px-4 mt-2 mb-4 shadow p-3 bg-white rounded"
                            placeholder="Description" maxlength="60" required="required" name="description"
                            id="portfolio-description" />
                        </div>
                        <div class="form-group">
                          <label for="link">Portfolio link</label>
                          <input type="url" class="form-control text-muted shadow p-3 bg-white rounded"
                            id="portfolio-link" placeholder="Put a valid portfolio link here" name="link"
                            required="required" />
                        </div>
                        <div class="modal-footer border-0 mx-auto">
                          <button type="submit" class="btn btn-primary btn-lg mb-3">
                            Add Portfolio
                          </button>
                        </div>
                      </form>
                    </div>

                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>


      <section class="mb-3">

        <div class="row">
          <% for( let index = 0; index < data.length; index++ ) { %>
          <div class="col-md-6 my-2">
            <div class="card mb-3 portfolio-card" data-id="<%= data[index].id %> ">
              <div class="card-body">
                <h5 class="card-title"><%= data[index].title %> </h5>
                <p class="card-text"><%= data[index].description %> </p>
                <p class="card-text"> <a href="<%= data[index].link %>"><%= data[index].link %></a></p>
                <div class="d-flex justify-content-end">
                  <img src="/img/iprofile/edit.svg" alt="" class="mr-2" id="edit-portfolio" data-toggle="modal"
                    data-target="#editPortfolio" />

                  <img src="/img/iprofile/carbon_trash-can.svg" alt="" class="mr-2" id="del-portfolio" />
                </div>
              </div>
            </div>
          </div>

          <!-- Modal -->
          <div class="modal fade" id="editPortfolio">
            <div class="modal-dialog">
              <div class="modal-content ml-lg-5 my-lg-5">
                <div class="modal-header">
                  <h4 class="modal-title">
                    Portfolio details
                  </h4>
                  <button type="button" class="close" data-dismiss="modal">
                    &times;
                  </button>
                </div>
                <div class="modal-body">
                  <form action="/employee/edit/portfolio" method="PUT">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                    <div class="form-group">
                      <label for="title">Title</label>
                      <input type="text" class="form-control px-4 mt-2 mb-4 shadow p-3 bg-white rounded"
                        placeholder="Portfolio title" value="<%= data[index].title %>" name="title" required="required"
                        id="portfolio-title" />
                    </div>
                    <div class="form-group">
                      <label for="description">Description</label>
                      <input type="text" class="form-control px-4 mt-2 mb-4 shadow p-3 bg-white rounded"
                        placeholder="Description" value="<%= data[index].description %>" required="required"
                        name="description" id="portfolio-description" />
                    </div>
                    <div class="form-group">
                      <label for="link">Portfolio link</label>
                      <input type="url" class="form-control text-muted shadow p-3 bg-white rounded" id="portfolio-link"
                        value="<%= data[index].link %>" placeholder="Put a valid portfolio link here" name="link"
                        required="required" />
                    </div>
                    <div class="modal-footer border-0 mx-auto">
                      <button type="submit" class="btn btn-primary btn-lg mb-3">
                        Edit Portfolio
                      </button>
                    </div>
                  </form>
                </div>

              </div>
            </div>
          </div>

          <% } %>
        </div>

      </section>
    </div>
  </main>

  <!-- Optional JavaScript -->
  <script src="/js/custom-js/side-nav.js"></script>
  <!-- jQuery first, then Popper.js, then Bootstrap JS -->
  <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
  <%- include('../Templates/flashmessagesclear') %>
</body>

</html>