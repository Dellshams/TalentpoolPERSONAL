<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../includes/employeeProfileHead') %>
    <style>
        .mr-2 img {
            vertical-align: middle;
            border-style: none;
            max-width: 60px;
            max-height: 60px;
        }
    </style>
</head>

<body>



    <%- include('../includes/employeeSideNav') %>

    <div class="modal fade modal-static" tabindex="-1" role="dialog" id="global_modal">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="container">
                    <div class="modal-header formCol">
                        <h5 class="modal-title"></h5>
                        <button type="button" class="close" data-dismiss="modal" onclick="close_modal()"
                            aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body"></div>
                </div>
            </div>
        </div>
    </div>
