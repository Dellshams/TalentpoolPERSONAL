    <main id="main-section">
      <%- include('../includes/employeeHeader') %>

      <section id="portfolio" class="mt-4">
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-7">
              <div class="card px-4 py-5 bio">
                <img src="" alt="" id="employee-img" />
                <div class="intern-main text-center mt-4">
                  <h3 class="employeeName"></h3>
                  <p class="employeeSkill"></p>
                </div>
                <hr />
                <div class="intern-other">
                  <p class="employeeLocation">
                    <span
                      ><img src="/img/iprofile/carbon_location.svg" alt=""
                    /></span>
                  </p>
                  <p class="employeeEmail">
                    <span
                      ><img src="/img/iprofile/carbon_email.svg" alt=""
                    /></span>
                  </p>
                  <p id="intern-id" class="ml-4"></p>
                  <p id="availability" class="ml-4"></p>
                  <p id="phone" class="ml-4"></p>
                </div>
                <hr />
                <div class="text-center">
                  <a
                    href="#"
                    type="button"
                    class="btn btn-lg btn-primary call-modal"
                    title="Edit profile"
                    data-modal-size="lg"
                    ><span id="edit_text">Edit Profile</span>
                    <div class="hidden-content">
                      <!-- <div class="container"> -->
                      <form action="" id="edit-profile">
                        <p id="error-message"></p>
                        <p id="success-message"></p>

                        <div class="row">
                          <div class="col-md-6 formCol">
                            <div class="form-group">
                              <label for="first name" class="super-label">
                                First name
                              </label>
                              <div style="position: relative;">
                                <input
                                  type="text"
                                  placeholder="Genesis"
                                  class="form-control"
                                  id="first-name"
                                  aria-describedby="nameHelp"
                                />
                              </div>
                            </div>
                          </div>
                          <div class="col-md-6 formCol">
                            <div class="form-group">
                              <div style="position: relative;">
                                <label for="lastname" class="super-label">
                                  Last name
                                </label>
                                <input
                                  type="text"
                                  placeholder="Anosike"
                                  class="form-control"
                                  id="last-name"
                                  aria-describedby="nameHelp"
                                />
                              </div>
                            </div>
                          </div>
                          <div class="col-md-6 formCol">
                            <div class="form-group">
                              <div style="position: relative;">
                                <label for="email" class="super-label">
                                  Email
                                </label>
                                <input
                                  type="email"
                                  placeholder="anosikegenesis@gmail.com"
                                  class="form-control"
                                  id="email"
                                  aria-describedby="emailHelp"
                                />
                              </div>
                            </div>
                          </div>
                          <div class="col-md-6 formCol">
                            <div class="form-group">
                              <div style="position: relative;">
                                <label for="location" class="super-label">
                                  Location
                                </label>
                                <input
                                  type="text"
                                  placeholder="Ibadan, Nigeria"
                                  class="form-control"
                                  id="location"
                                  aria-describedby="locationHelp"
                                />
                              </div>
                            </div>
                          </div>
                        </div>

                        <hr />

                        <div class="skills-choice">
                          <div class="row">
                            <div class="col-md-6 tracks formCol">
                              <label
                                class="super-label"
                                for="exampleFormControl"
                                >Track(s)</label
                              >

                              <div class="form-group form-check">
                                <input
                                  type="checkbox"
                                  class="form-check-input noHover"
                                  id="Backend"
                                  value="Backend Development"
                                />
                                <label
                                  class="form-check-label"
                                  for="exampleCheck1"
                                  >Backend Development</label
                                >
                              </div>
                              <div class="form-group form-check">
                                <input
                                  type="checkbox"
                                  class="form-check-input noHover"
                                  id="design"
                                  value="UI/UX Design"
                                />
                                <label
                                  class="form-check-label"
                                  for="exampleCheck1"
                                  >UI/UX Design</label
                                >
                              </div>
                              <div class="form-group form-check">
                                <input
                                  type="checkbox"
                                  class="form-check-input noHover"
                                  id="frontend"
                                  value="frontend"
                                />
                                <label
                                  class="form-check-label"
                                  for="exampleCheck1"
                                  >Frontend Development</label
                                >
                              </div>
                              <div class="form-group form-check">
                                <input
                                  type="checkbox"
                                  class="form-check-input noHover"
                                  id="mobile"
                                  value="Mobile Development"
                                />
                                <label
                                  class="form-check-label"
                                  for="exampleCheck1"
                                  >Mobile Development</label
                                >
                              </div>

                              <label class="form-group form-check">
                                <input
                                  type="checkbox"
                                  id="Backend"
                                  value="Backend Development"
                                />
                                <label
                                  class="form-check-label"
                                  for="exampleCheck1"
                                >
                                  Backend Development
                                </label>
                                <span class="checkmark"></span>
                              </label>
                              <label class="form-group form-check">
                                <input
                                  type="checkbox"
                                  checked="checked"
                                  id="design"
                                  value="UI/UX Design"
                                />
                                <label
                                  class="form-check-label"
                                  for="exampleCheck1"
                                >
                                  UI/UX Design
                                </label>
                                <span class="checkmark"></span>
                              </label>
                              <label class="form-group form-check">
                                <input
                                  type="checkbox"
                                  id="frontend"
                                  value="frontend"
                                />
                                <label
                                  class="form-check-label"
                                  for="exampleCheck1"
                                >
                                  Frontend Development
                                </label>
                                <span class="checkmark"></span>
                              </label>
                              <label class="form-group form-check">
                                <input
                                  type="checkbox"
                                  id="mobile"
                                  value="Mobile Development"
                                />
                                <label
                                  class="form-check-label"
                                  for="exampleCheck1"
                                >
                                  Mobile Development
                                </label>
                                <span class="checkmark"></span>
                              </label>
                            </div>
                            <div class="col-md-6">
                              <div class="form-group">
                                <label
                                  for="exampleFormControlFile1"
                                  class="super-label"
                                  >Profile photo</label
                                >
                                <div class="file-box">
                                  <span id="placeholder">profile-pic.png</span>
                                  <!-- <label for="file" class="btn btn-primary">Browse</label> -->
                                  <input
                                    type="file"
                                    class=""
                                    placeholder="profile.png"
                                    id="file"
                                    onchange="Filevalidation()"
                                  />
                                  <button
                                    type="button"
                                    name="button"
                                    class="btn"
                                    id="file-btn"
                                  >
                                    Browse
                                  </button>
                                </div>
                                <p id="size"></p>
                                <p id="file-message"></p>
                              </div>
                              <p id="p-text">
                                Recommended dimensions: 200 x 200px Maximum file
                                size: 500kb. Please add only a professional
                                looking headshot
                              </p>
                            </div>
                          </div>
                        </div>

                        <div class="text-center save_profile">
                          <button type="submit" class="btn btn-lg btn-primary">
                            Save profile
                          </button>
                        </div>
                      </form>
                      <!-- </div> -->
                    </div>
                  </a>
                </div>

                <!-- Button trigger modal -->
              </div>
            </div>
            <div class="col-md-5">
              <div class="upload-section">
                <div class="row d-flex flex-column">
                  <div class="col-md-12 mb-5">
                    <div class="card p-3 curriculum">
                      <div class="section-title py-2">
                        <div class="section-name">
                          <h4>Portfolio</h4>
                        </div>
                        <ul class="portfolios">
                          <!-- Dynamic Content Goes Here -->
                        </ul>
                      </div>
                    </div>
                  </div>

                  <div class="col-md-12">
                    <div id="skills" class="mb-3">
                      <div class="card p-3">
                        <div class="section-title py-2">
                          <div class="section-name">
                            <h4>Skillsets</h4>
                          </div>
                          <div
                            class="section-icon call-modal"
                            title="Add skill"
                            data-modal-size="md"
                            id="call_modalx"
                          >
                            <!-- <img src="../img/iprofile/carbon_add.svg" alt=""> -->

                            <div
                              data-toggle="modal"
                              data-target="#exampleModal"
                            >
                              <svg
                                width="16"
                                height="16"
                                viewBox="0 0 16 16"
                                fill="none"
                                xmlns="http://www.w3.org/2000/svg"
                              >
                                <path
                                  d="M9 7V0H7V7H0V9H7V16H9V9H16V7H9Z"
                                  fill="#084482"
                                />
                              </svg>
                            </div>

                            <!-- Modal -->
                            <div
                              class="modal fade"
                              id="exampleModal"
                              tabindex="-1"
                              role="dialog"
                              aria-labelledby="exampleModalLabel"
                              aria-hidden="true"
                            >
                              <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content">
                                  <div class="modal-body">
                                    <form id="add-skills">
                                      <input
                                        class="form-control form-control-lg"
                                        type="text"
                                        placeholder="User"
                                      />
                                      <button
                                        type="submit"
                                        class="btn btn-primary"
                                      >
                                        Add Skill
                                      </button>
                                    </form>
                                  </div>
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>
                        <ul class="lists">
                          <p id="skill-message"></p>
                          <!-- Dynamic Content Goes Here -->
                        </ul>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>

    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="/js/bootstrap-js/jquery.js"></script>
    <script src="/js/bootstrap-js/popper.js"></script>
    <!-- <script src="/js/custom-js/employees-profile.js"></script> -->
    <script src="/js/custom-js/modal.js"></script>
    <script src="/js/bootstrap-js/bootstrap.js"></script>
    <script src="/js/custom-js/side-nav.js"></script>
