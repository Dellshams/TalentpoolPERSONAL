<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <%- include('../Templates/head') %>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/styles/bootstrap-css/bootstrap.css" crossorigin="anonymous">

    <link href="/styles/custom-css/employee-dash-main.css" rel="stylesheet" />

    <link href="/styles/custom-css/employer-top-nav.css" rel="stylesheet" />

    <link href="/styles/custom-css/side-nav.css" rel="stylesheet" />

    <link rel="shortcut icon" href="/img/favicon.svg" type="image/x-icon">

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/../styles/custom-css/view-employee.css">

</head>

<body>

    <!-- Top-Nav -->
    <%- include('../Templates/admin-header') %>
    <!-- Top-Nav End -->
    <div class="container-fluid mt-4">

        <div class="row">
            <!-- SideBar -->
            <div class="col-lg-3 col-xl-2 d-md-block sticky-top">
                <%- include('../Templates/admin-sidebar') %>
                ​
                <div id="body__click"></div>
            </div>
            <!-- SideBar End-->

            <div class="col-lg-9 ml-sm-auto col-xl-10 pl-lg-0 pr-lg-5 px-xl-5 table-body">

                <!-- Employee Hires -->
                <h1 class="ml-3 mt-3 view-emp">Employers</h1>

                <div class="row">

                    <!-- Employees one -->
                    <div class="col-xl-4 col-md-12 card-cont">
                        <div class="card border-left-primary shadow h-100 crd">
                            <div class="card-body card-2">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs text-uppercase mb-1 text-edit" id="all_employees"><%= totalEmployers %>
                                        </div>
                                        <div class="h5 mb-0  text-gray ">Total Employers</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Employees two-->
                    <div class="col-xl-4 col-md-12 card-cont">
                        <div class="card border-left-primary shadow h-100 crd">
                            <div class="card-body card-2">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs  text-edit text-uppercase mb-1"><%= totalIndividual %>
                                        </div>
                                        <div class="h5 mb-0  text-gray ">Individual</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Employees three-->
                    <div class="col-xl-4 col-md-12 card-cont">
                        <div class="card border-left-primary shadow h-100 crd">
                            <div class="card-body card-2">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs  text-edit text-uppercase mb-1" id="available_employees_count"><%= totalCompany %>
                                        </div>
                                        <div class="h5 mb-0  text-gray ">Company</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Employee Hires End -->

                <!-- Employee List -->
                <div class="d-sm-flex align-items-center justify-content-between mb-4-justify">
                    <h2 class="h3 mb-0  dash-list">Employer's List</h2>
                    <div class="container-drop">
                      <div class="dropdown filter-btn">
                          <button type="button" class="btn drop-btn dropdown-toggle" data-toggle="dropdown">
                              <span>All</span>
                          </button>
                          <div class="dropdown-menu">
                              <a class="dropdown-item" href="/admin/employers?p=20">20</a>
                              <a class="dropdown-item" href="/admin/employers?p=50">50</a>
                              <a class="dropdown-item" href="/admin/employers?p=100">100</a>
                              <a class="dropdown-item" href="/admin/employers?p=200">200</a>
                          </div>
                      </div>
                  </div>
                </div>
                <!-- Employee List End -->
            </div>

            <!-- Tables -->
            <div class="table-responsive col-lg-9 ml-sm-auto col-xl-10 pl-lg-0 pr-lg-5 px-xl-5 table-body">
                <div class="table-top">
                    <div class="search-container search-table">
                        <form action="#">
                            <button type="submit"><i class="fa fa-search"></i></button>
                            <input type="text" id="search" placeholder="Search employer" name="search">
                        </form>

                        <!-- <form _lpchecked="1">
                            <input class="form-control mr-sm-2 p-2 search-input" type="text"
                                placeholder="Search Employer" aria-label="Search">
                        </form> -->
                    </div>
                </div>
                <div class="table-wrapper-scroll-y my-custom-scrollbar">
                    <table class="table mb-0" id="table">
                        <thead class="head-txt">
                            <tr>
                                <th class="th-head">Employer’s name</th>
                                <th class="th-head">Employer’s Phone</th>
                                <th class="th-head">Employer’s Email</th>
                                <th class="th-head">Employer Type</th>
                                <th class="th-head">Date Joined</th>
                                <th class="th-head">Status</th>
                            </tr>
                        </thead>

                        <!-- Tabe body -->
                        <!-- <tbody class="body-table" id="table-body-data"> -->
                        <% data.data.forEach(function(employer) { %>
                            <tr id="table-row">
                                <td class="align-middle user-name">
                                    <% if (employer.employer_type === 'Individual'){%>
                                        <i class="fa fa-user" style =" font-size: xx-large; padding-right: 1.5rem" aria-hidden="true"></i> <%= employer.employer_name %>
                                    <% } %>
                                    <% if (employer.employer_type === 'Company'){%>
                                        <i class="fa fa-home" style =" font-size: xx-large; padding-right: 1.5rem " aria-hidden="true"></i><%= employer.employer_name %>
                                    <% } %> 
                                </td>
                                <td class="align-middle dt-table"><%= employer.employer_phone %></td>
                                <td class="align-middle dt-table"><%= employer.employer_email %></td>
                                <td class="align-middle ui-table"><%= employer.employer_type %></td>
                                <td class="align-middle dt-table"><%= moment(employer.createdAt).format('MMMM Do YYYY') %></td>
                               
                                <td class="">
                                <% if (employer.verification_status === 'Pending'){%>
                                    <span class="btn btn-warning btn-block"><%= employer.verification_status %></span>
                                <% } %>
                                <% if (employer.verification_status === 'Approved'){%>
                                    <span class="btn btn-success btn-block"><%= employer.verification_status %></span>
                                <% } %>
                                <% if (employer.verification_status === 'Disapproved'){%>
                                    <span class="btn btn-danger btn-block"><%= employer.verification_status %></span>
                                <% } %> 
                                </td>
                                <td>    
                                    <div class="btn-group">
                                        <a class="btn btn-primary" href="#" data-toggle="modal" 
                                            data-target="#<%= employer.employer_name %><%= employer.employer_phone %>" ><i style= "color: white" class="fa fa-user fa-fw"></i> Info</a>
                                        <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#" aria-expanded="false">
                                          <span class="fa fa-caret-down" title="Toggle dropdown menu"></span>
                                        </a>
                                        <ul class="dropdown-menu">
                                            <li><a onclick= 'toApprove("<%= employer.employer_id %>", "<%= employer.employer_name %>")' href="#"><i class="fa fa-check" style= "color: green; padding: 10px;" aria-hidden="true"></i>Approve</a></li>
                                            <li><a onclick = 'toDisapprove("<%= employer.employer_id %>", "<%= employer.employer_name %>")' href="#"><i class="fa fa-times" style= "color: red ; padding: 10px;" aria-hidden="true"></i> Disapprove</a></li>
                                            <li><a onclick = 'toBlock("<%= employer.user_id %>", "<%= employer.employer_name %>")' href="#"><i class="fa fa-lock" style= "color: black ; padding: 10px;"></i> Block </a></li>
                                            <li><a onclick = 'toUnblock("<%= employer.user_id %>", "<%= employer.employer_name %>")' href="#"><i class="fa fa-unlock" style= "color: green ; padding: 10px;" aria-hidden="true"></i> Unblock</a></li>
                                          <li class="divider"></li>
                                        </ul>
                                      </div>
                                </td>
                            </tr>
                            
                            <!-- Modal -->
                            <div class="modal fade p-0" id="<%= employer.employer_name %><%= employer.employer_phone %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered" role="document">
                                <div class="modal-content p-3">
                                    <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLongTitle">Employer information</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                    </div>
                                    <div class="modal-body">
                                        <form action=""  >
                                            <div class="row">
                                                <div class="col-md form-group">
                                                    <label >Organisation name: </label>
                                                    <input type="text" class="form-control" disabled value="<%= employer.employer_name %>">
                                                </div>
                                                <div class="col-md form-group">
                                                    <label >Email address: </label>
                                                    <input type="text" class="form-control" disabled value = "<%= employer.employer_email %>">
                                                </div>
                                            </div>
                                            <div class= "row">
                                                <div class="col-md form-group ">
                                                    <label >Verification status: </label>
                                                    <input type="text" class="form-control" disabled value = "<%= employer.verification_status %>">
                                                </div>
                                                <div class="col-md form-group ">
                                                    <label >Controlled by: </label>
                                                    <input type="text" class="form-control" disabled value = "<%= employer.employer_type %>">
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md form-group">
                                                    <label>Phone number :</label>
                                                    <input type="text" class="form-control" disabled = true value = "<%= employer.employer_phone%>">
                                                </div>
                                                <div class="col-md form-group">
                                                    <label>Country :</label>
                                                    <input type="text" class="form-control" disabled value = "<%= employer.employer_country %>">
                                                </div>
                                            </div>
                                            <div class="row ">
                                                <div class="col-md form-group">
                                                    <label>Linkedin :</label>
                                                    <input type="text" class="form-control" disabled value = "<%= employer.linkedin %>">
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                    <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    </div>
                                </div>
                                </div>
                            </div>
                            </div>
                        <% }) %>
                            

                        </tbody>
                    </table>
                </div>
                <div class="d-flex">
                    <div class="ml-auto p-2">
                        <a href="" style="padding: 10px;"><i class="fa fa-chevron-left" aria-hidden="true" style="padding: 10px;"></i>Prev</a>
                        <a href="" style="padding: 10px;">Next<i class="fa fa-chevron-right" aria-hidden="true" style="padding: 10px;"></i></a>
                    </div>
                </div>
            </div>
            <!-- Tables end -->
        </div>

        <!-- Optional JavaScript -->
        <script src="/js/bootstrap-js/jquery.js"></script>
        <script src="/js/bootstrap-js/bootstrap.js"></script>
        <script src="/js/bootstrap-js/popper.js"></script>
        <script>
        $('#myModal').on('shown.bs.modal', function () {
        $('#myInput').trigger('focus')
        })
        </script>
        <!-- <script src="../js/custom-js/admin-viewEmployee.js"></script> -->
        <script src="https://unpkg.com/sweetalert2@7.8.2/dist/sweetalert2.all.js"></script>
        <script src="/js/custom-js/admin-all-employers.js"></script>
        <script src="/js/custom-js/side-nav.js"></script>

        
</body>

</html>